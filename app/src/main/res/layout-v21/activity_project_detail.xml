<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/primary"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Project Name"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="155dp">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/first_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|start"
                    android:layout_weight="0.33"
                    android:id="@+id/tv_project_detail_location_title"
                    android:textSize="18sp"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center|start"
                    android:layout_weight="0.6"
                    android:id="@+id/tv_project_detail_location_value"
                    android:textSize="18sp"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_project_detail_location_map"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:elevation="5sp"
                    android:gravity="center|end"
                    android:textSize="18sp"
                    app:srcCompat="@drawable/marker" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@id/first_row"
                android:orientation="horizontal"
                android:id="@+id/second_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center|start"
                    android:layout_weight="0.3"
                    android:id="@+id/tv_project_detail_status_title"
                    android:textSize="18sp"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center|start"
                    android:layout_weight="0.7"
                    android:id="@+id/tv_project_detail_status_value"
                    android:textSize="18sp"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_below="@id/second_row"
                android:orientation="horizontal"
                android:id="@+id/third_row"
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <TextView
                    android:gravity="start"
                    android:layout_weight="0.3"
                    android:id="@+id/tv_project_description_title"
                    android:textSize="18sp"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="start"
                    android:layout_weight="0.7"
                    android:maxLines="3"
                    android:ellipsize="marquee"
                    android:id="@+id/tv_project_description_value"
                    android:textSize="18sp"
                    android:text="@string/lorem"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="2.5dp"
            app:tabMode="fixed" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_tab_project_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".TabMediaActivity" />

</LinearLayout>